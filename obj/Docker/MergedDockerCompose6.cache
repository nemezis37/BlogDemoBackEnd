services:
  blog.api:
    build:
      context: C:\Repos\BlogDemo\BackEnd
      dockerfile: Blog.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Blog.API
      target: base
    container_name: Blog.API_1
    depends_on:
      db:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: blogapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/net5.0/Blog.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - target: 80
    - target: 443
    tty: true
    volumes:
    - C:\Repos\BlogDemo\BackEnd\Blog.API:/app:rw
    - C:\Users\Nemezis\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\Nemezis\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Nemezis\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Users\Nemezis\.nuget\packages:/root/.nuget/packages:ro
    - C:\Repos\BlogDemo\BackEnd:/src:rw
  db:
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: 1Secure*Password1
    image: mcr.microsoft.com/mssql/server:2017-latest
version: '3.4'